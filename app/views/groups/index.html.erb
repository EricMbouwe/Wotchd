<div class= "group-list bg-blue">

  <div class= "groups-list_head sticky-top">
    <div class="menu d-flex justify-content-between align-items-center p-2">
      <%= link_to user_path(session[:user_id]) do %>
        <span><i class="fa fa-bars fa-2x font-weight-lighter" aria-hidden="true"></i></span>
      <% end %>
      <h4 class="title m-0">Groups</h4>
      <span><i class="fa fa-search fa-2x" aria-hidden="true"></i></span>
    </div>
  </div>

  <div class= "programs-list_content">

    <% @groups.each do |group|%>
      <%= link_to group do %>
        <div class= "groups-list_card d-flex justify-content-center bg-fff">
          <p class="m-0"><%= group.icon %></p>
          <div class="group_details border border-dark ml-2">
            <p class='m-0'><%= group.name %></p>
            <small><%= group.created_at %></small>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="add-btn">
      <%= link_to 'Add new group', new_group_path, class:"btn border border-white btn-lg btn-block text-white btn-outline-success" %>
    </div>
  </div>

