<div class= "programs-list bg-eee">

  <div class= "programs-list_head sticky-top">
    <div class="menu d-flex justify-content-between align-items-center p-2">
      <%= link_to user_path(session[:user_id]) do %>
        <span><i class="fa fa-bars" aria-hidden="true"></i></span>
      <% end %>
      <h4 class="title m-0"><%= @title %></h4>
      <span><i class="fa fa-search" aria-hidden="true"></i></span>
    </div>
    <div class="amount_watched d-flex justify-content-between align-items-center py-3 px-2 bg-light text-color">
      <p class="m-0">Total hours watched:</p>
      <p class="m-0"><b><%= @programs_amount %> hrs</b></p>
    </div>
  </div>

  <div class= "programs-list_content">

    <% @programs.each do |program|%>
      <div class= "programs-list_card d-flex justify-content-between">
        <div class="program_details d-flex">
          <% if program.group %>
            <% if program.group.avatar.attached? %>
              <%= image_tag program.group.avatar, class: "avatar", width: 70, height: 70 %>
            <% else %>
              <%= image_tag 'sample-group.jpg', alt: "default image", width: 70, height: 70, class: "" %>
            <% end %>
          <% end %> 
          <div class="program_details__details ml-2">
            <p class="mt-3 mb-0"><%= program.name.capitalize %></p>
            <small class="mt-2 d-block small"><%= program.created_at.strftime("%A %B %d, %Y") %></small>
          </div>
        </div>

        <div class="d-flex flex-column">
          <p class="mb-1 mt-3"><b><%= program.amount %> hrs</b></p>
          <%= link_to program_path(program.id), class: "align-self-end", method: :delete, data: { confirm: 'do you want to delete this program?'} do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="add-btn">
      <%= link_to 'Add new program', new_program_path(), class:"btn border border-white btn-lg btn-block text-white btn-outline-success" %>
    </div>
  </div>

