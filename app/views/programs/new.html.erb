<div class="new-program bg-eee vh-100">
  <div class="new-item-nav">
    <div class="menu d-flex justify-content-between align-items-center p-2">
        <%= link_to user_path(session[:user_id]) do %>
          <span><i class="fa fa-arrow-left" aria-hidden="true"></i></span>
        <% end %>
        <h4 class="title m-0">New program</h4>
        <span><%= link_to 'Cancel', programs_path(caller: 'full') %></span>
      </div>
  </div>

  <div class="container form-new d-flex flex-column justify-content-center">

    <% if @program.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @program.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    

    <%= form_for @program do |f| %>

      <div class="form-group">
        <%= f.text_field :name, placeholder: 'Program name', autofocus: true, class: "w-100" %>
      </div>
      <div class="form-group">
        <%= f.text_field :amount, placeholder: 'Hours watched', autofocus: true, class: "w-100" %>
      </div>
      <div class="form-group">
        <%= label_tag :group, "Group" %>
        <div>
          <%= f.select :group_id, Group.pluck(:name, :id), include_blank: "Select group", class: "w-100" %>
        </div>
      </div>

      <div class="actions add">
        <%= f.submit 'Add a program', class: "log d-block border rad p-2 text-center text-white bg-blue w-100"  %>
      </div>
    <% end %>

  </div>
</div>
