<div class="container">
  <h1>Add a new program</h1>

  <% if @program.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @program.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <%= form_for @program do |f| %>

    <div class="form-group">
      <%= label_tag :name, "Program name", class:"" %>
      <%= f.text_field :name, autofocus: true, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= label_tag :hours, "Hours watched" %>
      <%= f.text_field :amount, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :group, "Group" %>
      <%= f.text_field :group, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit 'Add a program', class: "btn btn-primary btn-block"  %>
    </div>
  <% end %>

</div>
