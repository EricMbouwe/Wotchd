<div class="new-program bg-eee">
  <div class="new-item-nav">
    <div class="menu d-flex justify-content-between align-items-center p-2">
        <%= link_to user_path(session[:user_id]) do %>
          <span><i class="fa fa-long-arrow-left fa-2x" aria-hidden="true"></i></span>
        <% end %>
        <p class="title m-0">New program</p>
        <span><%= link_to 'Add', "", :onclick => "$('#form_id').submit()" %></span>
      </div>
  </div>

  <div class="container vh-100 d-flex flex-column justify-content-center">
    <h1 class="">Add a new program</h1>

    <% if @program.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @program.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    

    <%= form_for @program do |f| %>

      <div class="form-group">
        <%= label_tag :name, "Program name" %>
        <%= f.text_field :name, autofocus: true, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= label_tag :hours, "Hours watched" %>
        <%= f.text_field :amount, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :group, "Group" %>
        <div>
          <%= f.select :group_id, Group.pluck(:name, :id) %>
        </div>
      </div>

      <div class="actions add">
        <%= f.submit 'Add a program', class: "btn btn-primary btn-block"  %>
      </div>
    <% end %>

  </div>
</div>
